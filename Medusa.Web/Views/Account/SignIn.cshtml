@model AppUserLoginModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-action="SignIn" method="POST" class="w-50 mt-4 p-3 mx-auto shadow">
    <div class="form-group">
        <label for="@Model.UserName">Kullanıcı Adı</label>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="@Model">Parola</label>
        <input asp-for="@Model.Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Oturum Aç</button>
    </div>
</form>
